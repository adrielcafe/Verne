<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.explorer.ExplorerFragment">

    <cz.kinst.jakub.view.StatefulLayout
        android:id="@+id/vStateLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </cz.kinst.jakub.view.StatefulLayout>

    <com.joaquimley.faboptions.FabOptions
        android:id="@+id/vExplorerFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        app:button_menu="@menu/explorer_item"
        app:background_color="@color/colorAccentDark"
        app:fab_color="@color/colorAccent"/>

</FrameLayout>
